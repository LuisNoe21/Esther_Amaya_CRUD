<% include partials/_headercat %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-9">
      <table class="table table-bordered table-striped text-center mt-4">
        <thead>
          <tr>
           <td><b>Id</b></td></b>
            <td><b>Categorias</b></td>
            <td><b>Descripciones</b></td>
             <td><b>Opciones</b></td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= (i + 1) %></td>
                <td><%= data[i].categoria %></td>
                <td><%= data[i].descripcion %></td>
                <td>
                  <a  href="/categorias/updatem/<%= data[i].id %>" class="btn btn-warning">Actualizar</a>
                  <a style="margin-top: 2px; background-color: red;" href="/categorias/deletem/<%= data[i].id %>" class="btn btn-danger">Eliminar</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
    <div style="margin-top: 3%;" class="col-md-3">
     

        
        <form action="/categorias/addm" method="POST">
          <p style="text-align: center;"><b>CREAR NUEVA CATEGORIA</p></b>
    <hr></hr>
          <div   class="form-group">
            <input type="text" name="categoria" placeholder="Nombre de Categoria" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="descripcion" placeholder="Descripcion de Categoria" class="form-control">
          </div>

          <button style="background-color: green;" type="submit" class="btn btn-primary">
            Guardar Categoria
          </button>
        </form>
      </div>
    </div>
 
</div>


<% include partials/_footercat %>
